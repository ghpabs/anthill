{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "core/scripts/**/*.ts",
    "client/scripts/**/*.ts",
    "typings/browser.d.ts"
  ],
  "files": [
    "core/scripts/Ant.ts",
    "core/scripts/AntHill.ts",
    "core/scripts/common/Rectangle.ts",
    "core/scripts/common/Vector.ts",
    "core/scripts/Config.ts",
    "core/scripts/Food.ts",
    "core/scripts/FoodFactory.ts",
    "core/scripts/Pheromone.ts",
    "core/scripts/PheromoneGrid.ts",
    "core/scripts/World.ts",
    "client/scripts/common/Controller.ts",
    "client/scripts/common/Timer.ts",
    "client/scripts/common/View.ts",
    "client/scripts/Main.ts",
    "typings/browser.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
